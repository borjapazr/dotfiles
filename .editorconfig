root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[scripts/*]
indent_size  = 2

[.zshrc]
indent_size  = 2

[*.{yaml,yml}]
mode = YAML
indent_size  = 2

[Makefile]
indent_style = tab
indent_size = 2

[*.json]
indent_size  = 2
insert_final_newline = ignore

[*.md]
indent_size  = 2
trim_trailing_whitespace = false
