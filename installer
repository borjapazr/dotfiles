#!/usr/bin/env bash

set -euo pipefail

##? Setups the environment
##?
##? Usage:
##?    install

REPOSITORY="https://github.com/borjapazr/.dotfiles.git"
DOTFILES_LOG_FILE=${DOTFILES_LOG_FILE:-$HOME/dotfiles.log}

case "${1:-}" in
-h | --help | --version)
  grep "^##?" "$0" | cut -c 5-
  exit 0
  ;;
esac

# Colors, print and prompt
red='\033[0;31m'
green='\033[0;32m'
purple='\033[0;35m'
normal='\033[0m'

_w() {
  local -r text="${1:-}"
  echo -e "$text"
}
_a() { _w "âœ $1"; }
_e() { _a "${red}$1${normal}"; }
_s() { _a "${green}$1${normal}"; }
_q() { read -rp "ğŸ¤” $1: " "$2"; }

_log() {
  log_name="$1"
  current_date=$(date "+%Y-%m-%d %H:%M:%S")

  touch "$DOTFILES_LOG_FILE"
  echo "----- $current_date - $log_name -----" >>"$DOTFILES_LOG_FILE"

  while IFS= read -r log_message; do
    echo "$log_message" >>"$DOTFILES_LOG_FILE"
  done

  echo "" >>"$DOTFILES_LOG_FILE"
}

_current_timestamp() { date +%s; }

_command_exists() {
  type "$1" >/dev/null 2>&1
}

clone_repository() {
  if [ -d "$1" ]; then
    local -r backup_path="$1.$(_current_timestamp).back"

    _e "The path '$1' already exist"
    _s "Creating a backup in '$backup_path'"

    mv "$1" "$backup_path"
  else
    _a "ğŸ‘Œ Ok! dotfiles will be located in: ${purple}$DOTFILES_PATH${normal}"
  fi

  git clone "$REPOSITORY" "$DOTFILES_PATH" --depth 1 2>&1 | _log "ğŸ™ Cloning repository"
}

install_git() {
  if ! _command_exists git; then
    _e "âŒ git not installed, trying to install"

    if _command_exists apt; then
      _a "ğŸ“¥ Installing using apt"
      sudo apt -y install git 2>&1 | _log "ğŸ“¥ Installing git"
    elif _command_exists dnf; then
      _a "ğŸ“¥ Installing using dnf"
      sudo dnf -y install git 2>&1 | _log "ğŸ“¥ Installing git"
    elif _command_exists yum; then
      _a "ğŸ“¥ Installing using yum"
      yes | sudo yum install git 2>&1 | _log "ğŸ“¥ Installing git"
    elif _command_exists brew; then
      _a "ğŸ“¥ Installing using brew"
      yes | brew install git 2>&1 | _log "ğŸ“¥ Installing git"
    elif _command_exists pacman; then
      _a "ğŸ“¥ Installing using pacman"
      sudo pacman -S --noconfirm git 2>&1 | _log "ğŸ“¥ Installing git"
    else
      case "$OSTYPE" in
      darwin*)
        _a "ğŸ‘€ Checking if Command Line Tools are installed ğŸ•µï¸â€â™‚ï¸"

        xcode-select --install 2>&1 | grep installed >/dev/null
        if [[ $? ]]; then
          _a "ğŸ“¥ Installing Command Line Tools ğŸ“º"
          xcode-select --install
          _q "ğŸ¹ Press a key after command line tools has finished to continue...ğŸ‘‡" "CLT_INSTALLED"
        fi
        ;;
      *)
        _e "âŒ Could not install git, no package provider found"
        exit 1
        ;;
      esac
    fi
  fi
}

install_curl() {
  if ! _command_exists curl; then
    _e "âŒ curl not installed, trying to install"

    if _command_exists apt; then
      _a "ğŸ“¥ Installing using apt"
      sudo apt -y install curl 2>&1 | _log "ğŸ“¥ Installing curl"
    elif _command_exists dnf; then
      _a "ğŸ“¥ Installing using dnf"
      sudo dnf -y install curl 2>&1 | _log "ğŸ“¥ Installing curl"
    elif _command_exists yum; then
      _a "ğŸ“¥ Installing using yum"
      yes | sudo yum install curl 2>&1 | _log "ğŸ“¥ Installing curl"
    elif _command_exists brew; then
      _a "ğŸ“¥ Installing using brew"
      yes | brew install curl 2>&1 | _log "ğŸ“¥ Installing curl"
    elif _command_exists pacman; then
      _a "ğŸ“¥ Installing using pacman"
      sudo pacman -S --noconfirm curl 2>&1 | _log "ğŸ“¥ Installing curl"
    else
      _e "âŒ Could not install curl, no package provider found"
      exit 1
    fi
  fi
}

main() {
  _w
  _w "â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”"
  _w "â”‚   ğŸ”¥ ${green}.dotfiles${normal} installer!   â”‚"
  _w "â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜"
  _w
  _q "â“ Where do you want your dotfiles to be located? (default ~/.dotfiles)" "DOTFILES_PATH"
  DOTFILES_PATH="${DOTFILES_PATH:-$HOME/.dotfiles}"
  DOTFILES_PATH="$(eval echo "$DOTFILES_PATH")"
  export DOTFILES_PATH="$DOTFILES_PATH"

  install_curl
  install_git

  _a "ğŸ™ Cloning .dotfiles"
  clone_repository "$DOTFILES_PATH"

  _a "ğŸ“¥ Installing dependencies"
  cd $DOTFILES_PATH
  git submodule update --init --recursive 2>&1 | _log "Installing .dotfiles dependencies"

  "$DOTFILES_PATH/bin/dot" self install

  _s "ğŸ‰ .dotfiles installed correctly! ğŸ‰"
  _s "ğŸ™ Please, restart your terminal to see the changes"

  _a "ğŸ“‹ Check the installation logs"
  cat "$DOTFILES_LOG_FILE"
}

main "$@"
