#!/usr/bin/env bash

set -euo pipefail

source "$DOTFILES_PATH/scripts/core/_main.sh"
source "$DOTFILES_PATH/scripts/self/utils/generic.sh"
source "$DOTFILES_PATH/scripts/self/utils/ubuntu.sh"

##? Updates submodules, dotfiles and attempts to do some setup
##?
##? Usage:
##?    update

docs::parse "$@"

if platform::is_linux; then
  log::note "🔄 Updating system..."
  ubuntu::update_system
fi

log::note "🐙 Updating .dotfiles..."
generic::self_update

log::note "🐙 Updating submodules..."
generic::update_submodules

log::note "📦 Updating external tools..."
ubuntu::update_external_tools

"$DOTFILES_PATH/bin/dot" self link