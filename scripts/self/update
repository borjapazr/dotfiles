#!/usr/bin/env bash

set -euo pipefail

source "$DOTFILES_PATH/scripts/core/_main.sh"
source "$DOTFILES_PATH/scripts/self/utils/install.sh"
source "$DOTFILES_PATH/scripts/self/utils/update.sh"

##? Updates submodules, dotfiles and attempts to do some setup
#?? 1.0.0
##?
##? Usage:
##?    update

docs::eval_help "$@"

if platform::is_linux; then
  log::note "ğŸ”„ Updating system..."
  ubuntu::update
fi

log::note "ğŸ™ Updating .dotfiles..."
self_update

log::note "ğŸ™ Updating submodules..."
update_submodules

log::note "ğŸ“¦ Updating external tools..."
ubuntu::update_external_tools

"$DOTFILES_PATH/bin/dot" self link