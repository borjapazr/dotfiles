#!/usr/bin/env bash

set -euo pipefail

source "$DOTFILES_PATH/scripts/core/_main.sh"
source "$DOTFILES_PATH/scripts/self/utils/install.sh"
source "$DOTFILES_PATH/scripts/self/utils/update.sh"

##? Install the dotfiles
#?? 1.0.0
##?
##? Usage:
##?    install

docs::eval_help "$@"

log::note "ğŸ”´ğŸŸ¢ğŸ”µ Installing .dotfiles..."
self_update
update_submodules

if platform::is_linux; then
  log::note "ğŸ§ Installing Linux custom packages..."
  ubuntu::update
  ubuntu::add_repositories
  ubuntu::install_tools
  #ubuntu::configure_tools
fi

log::note "ğŸ’š Installing npm packages..."
langs::install_npm_packages

log::note "ğŸ’» Setting ZSH as the default shell..."
chsh -s $(which zsh)

"$DOTFILES_PATH/bin/dot" self link

log::note "ğŸ’„ Installing oh-my-zsh plugins..."
oh_my_zsh::install_plugins

if platform::is_linux; then
  echo
  log::header "ğŸ¤” Remember to install manually"
  ubuntu::install_manually
  echo
fi
