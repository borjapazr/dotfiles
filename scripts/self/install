#!/usr/bin/env bash

source "$DOTFILES_PATH/scripts/core/_main.sh"
source "$DOTFILES_PATH/scripts/self/utils/install.sh"
source "$DOTFILES_PATH/scripts/self/utils/update.sh"

##? Install the dotfiles
##?
##? Usage:
##?    install
docs::parse "$@"

update_system

install_requirements

install_ohmyzsh_plugins
install_ohmyzsh_themes

log::info "ðŸ”— Aplying symlinks"
"$DOTFILES_PATH/bin/dot" symlinks apply | log::file "ðŸ”— Aplying symlinks" || true

if ! str::contains zsh "$SHELL"; then
  log::info "ðŸ’» Setting ZSH as the default shell"
  sudo chsh -s "$(command -v zsh)" "${USER}" | log::file "ðŸ’» Setting ZSH as default shell"
fi

log::info "ðŸ“¥ Importing packages"
"$DOTFILES_PATH/bin/dot" package import 2>&1 | log::file "ðŸ“¥ Importing packages"

log::info "ðŸ”™ Executing custom restoration scripts"
install_scripts_path="$DOTFILES_PATH/restoration_scripts"
if [ -d "$install_scripts_path" ]; then
  find "$install_scripts_path" -mindepth 1 -maxdepth 1 -type l,f -name '*.sh' |
    sort |
    while read -r install_script; do
      { [[ -x "$install_script" ]] && . "$install_script" | log::file "ðŸ”™ Executing afterinstall: $(basename "$install_script")"; } || {
        log::error "Install script error in $(basename "$install_script")"
      }
    done
fi
